<% if flash[:notice] %>
  <h1><%= flash[:notice] %></h1>
<% end %>

<%= form_with url: sessions_path, method: :post do |f| %>
  <%= f.label :email %>
  <%= f.text_field :email, placeholder: "example@mail.com" %>
  <%= f.label :password %>
  <%= f.password_field :password, placeholder: "password" %>
  <%= f.submit "Sign In" %>
<% end %>

<%= link_to "Forgot Password?", new_password_reset_path %>